{
  "name": "static-react",
  "version": "1.0.1",
  "description": "React static HTML generator for use with react-router-component",
  "author": "Brent Jackson",
  "license": "MIT",
  "main": "build.js",
  "peerDependencies": {
    "react": "^0.12.2"
  },
  "dependencies": {
    "lodash": "^3.5.0",
    "node-jsx": "^0.12.4"
  },
  "devDependencies": {
    "browserify": "^9.0.3",
    "colors": "^1.0.3",
    "commander": "^2.7.1",
    "html-validator": "0.0.8",
    "http-server": "^0.7.5",
    "mocha": "^2.2.1",
    "react-html": "^1.0.0",
    "react-tools": "^0.12.2",
    "reactify": "^1.0.0",
    "watch": "^0.14.0"
  },
  "scripts": {
    "test": "mocha test",
    "example:html": "node ./examples/src/build.js",
    "watch:example:html": "watch 'npm run example:html' ./examples/src/components",
    "example:js": "browserify examples/src/app.js -o examples/js/app.js",
    "watch:example:js": "watch 'npm run example:js' ./examples/src/components",
    "serve": "http-server -p 8000",
    "start": "npm run watch:example:html & npm run watch:example:js & npm run serve"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  },
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jxnblk/static-react.git"
  },
  "bugs": {
    "url": "https://github.com/jxnblk/static-react/issues"
  },
  "homepage": "https://github.com/jxnblk/static-react"
}
